<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">

        <item name="android:fontFamily">@font/mark</item>

    </style>

    <style name="TextViewStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/mark_bold</item>
    </style>

    <style name="EditTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:fontFamily">@font/mark_med</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="errorTextColor">@color/text_error</item>
        <item name="android:textColorHint">@color/text_hint</item>

    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/mark_med</item>
        <item name="android:minWidth">@dimen/_100sdp</item>

    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ButtonStyleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/mark_med</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_8sdp</item>
    </style>

</resources>